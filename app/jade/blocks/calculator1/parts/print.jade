include print/size
include print/orient
include print/bond
//include print/pages


mixin calc_print(name, items)
	each item in items
		.calculator__block--inner(class=name + '-' + item.id)
			.calculator__header--inner
				h3.calculator__title--inner=item.name
			-var mix_name = name + '_' + item.id
			case item.id
				when 'size'
					+size(mix_name)
				when 'orient'
					+orient(mix_name)
				when 'bond'
					+bond(mix_name)
				when 'pages'
					//+pages(mix_name)


mixin print(name)
	+calc_print(name, [{
		id: 'size',
		name: 'Размер'
	}, {
		id: 'orient',
		name: 'Ориентация'
	}, {
		id: 'bond',
		name: 'Типы скрепления'
	}, {
		id: 'pages',
		name: 'Страницы'
	}])