mixin block_color_inner(name, item)
	-var itemName = pageClass + '__switcher'
	.calculator__item.form__switcher(class=itemName + ' ' + name)
		+form_switcher(itemName, [{
			id: name,
			obj: item
		}])
		.form__switcher-img(class=itemName + '-img' + ' ' + name + '-items')
			+picture({
				name: item.off.name,
				class: 'form__switcher-img_off ' + itemName + '-img_off ' + name + '-img--switcher',
				adress: '../images/calculator/' + name + '/' + name + '@',
				ext: 'png'
			}, {
				main: {
					width: 494
				}
			})
			+picture({
				name: item.on.name,
				class: 'form__switcher-img_on ' + itemName + '-img_on ' + name + '-img--switcher',
				adress: '../images/calculator/' + name + '/' + name + '@',
				ext: 'png'
			}, {
				main: {
					width: 494
				}
			})

mixin block_color(name)
	+block_color_inner(name, {
		id: 'block_color',
		name: 'Цветной',
		off: {
			val: 'b_w',
			src: '',
			alt: 'Черно-белый'
		},
		on: {
			val: 'colored',
			src: '',
			alt: 'Цветной'
		}
	})