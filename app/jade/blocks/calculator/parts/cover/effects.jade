mixin cover_effects(name, obj)
	-var itemName = pageClass + '__switcher'
	.calculator__item.form__switcher.clearfix(class=itemName + ' ' + name)
		+form_switcher(itemName, [{
			name_main: name,
			id: name + '-convex',
			obj: obj.convex
		}, {
			name_main: name,
			id: name + '-stamping',
			obj: obj.stamping
		}])
		.form__switcher-img(class=itemName + '-img' + ' ' + name + '-items')
			+picture({
				name: 'Эффекты нанесения',
				adress: '../images/calculator/' + name + '/' + name + '@',
				ext: 'png'
			}, {
				main: {
					width: 128
				}
			})

mixin effects(name)
	+cover_effects(name, {
		convex: {
			id: 'convex',
			name: 'Конгрев',
			off: {
				val: 'no-convex',
				src: '',
				alt: 'Без конгрева'
			},
			on: {
				val: 'convex',
				src: '',
				alt: 'Конгрев'
			}
		},
		stamping: {
			id: 'stamping',
			name: 'Тиснение',
			off: {
				val: 'no-stamping',
				src: '',
				alt: 'Без тиснения'
			},
			on: {
				val: 'stamping',
				src: '',
				alt: 'Тиснение'
			}
		}
	})