mixin print_pages(name, id, items)
	.calculator__item.calculator__selector(class=name)
		each item in items
			div(class=name + '-desc' + ' ' + name + '-desc--' + id)
				if id == item.id
					each img in item.img
						figure(class=name + '-desc__img' + ' ' + name + '-desc__img--' + img.src + ' ' + name + '-desc__img--' + id)
							+picture({
								name: img.name,
								adress: '../images/calculator/' + name + '/' + name + '@',
								ext: 'png'
							}, {
								main: {
									width: 328,
									img: 328
								}
							})
							figcaption=img.name
					p(class=name + '-desc__text' + ' ' + name + '-desc__text--' + id)=item.desc


