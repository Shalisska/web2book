include ../menu/menu
include ../keywords
include ../list

mixin faq_header(name)
	.clearfix(class = name)
		div.title.title_pop.title_pop_grand Справка по Web2Book
		div(class = name + '__info')
			div(class = name + '__phone')
				span(class = name + '__phone-text') Телефон Тех.поддержки
				span(class = name + '__phone-num') (495) 223-92-00
			form.search.clearfix(action = '/' method = 'get')
				input.search__input(type = 'text' placeholder = 'Поиск по справке')
				button.search__btn.sprite_icon-my_files_search

.popup.faq
	p.popup__title FAQ
	a.popup__close.sprite_icon-close--white(href='#')
	.faq-block.clearfix
		+faq_header('faq-header')
		aside.faq-sidebar
			+faq_menu('vert_private', 1, [{
				name: 'Управление файлами',
				num: '12'
			}, {
				name: 'Настройка аккаунта',
				num: '22'
			}, {
				name: 'Калькуляция проекта',
				num: '5'
			}, {
				name: 'Оформление заказа',
				num: '9'
			}, {
				name: 'Оплата',
				num: '17'
			}])
		.faq-main
			block faq_main
