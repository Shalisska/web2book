mixin top_menu_sort(items)
	each item, i in items
		-var active_class = ''
		if i === 2
			-active_class = ' ' + pageSubclass + '__menu-top_item--active'
		li(class=pageSubclass + '__menu-top_item' + active_class)
			a(href='#')=item

mixin alphabet(items)
	each item, i in items
		-var spec_class = ''
		if i === 12
			-spec_class = ' ' + pageSubclass + '__menu-bottom_item--active'
		else if i === 24 || i === 25
			-spec_class = ' ' + pageSubclass + '__menu-bottom_item--disable'
		li(class=pageSubclass + '__menu-bottom_item' + spec_class)
			a(class=pageSubclass + '__menu-bottom_item--' + item.id href='#')=item.name

