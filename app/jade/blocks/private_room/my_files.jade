-var actualClass = pageSubclass

-function class_name(names, part) {
	-var res = '';
	-names.forEach(function(name) {
		-res = res + name + part + ' ';
	-});
	-return res;
-}

include my_files/header

mixin my_files(items)
	+my_files_header(actualClass, items)
	each item in items
		-var name_section = item.id
		include my_files/table


