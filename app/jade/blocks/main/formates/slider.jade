mixin slider--formates_item(slider_name, items)
	div.formates-item-slider(class='formates-item-slider--' + slider_name)
		div.formates-item__box(class='formates-' + slider_name + '__box')
			div.formates-item__inner.clearfix(class='formates-' + slider_name + '__inner')
				each item in items
					div.formates-item__item(class='formates-' + slider_name + '__item' + ' ' + 'formates-' + slider_name + '__' + item.id)
						div.formates-item__img(class='formates-' + slider_name + '__img'): img(src='../images/formates/format@720.png', alt=item.id)
						if item.text
							p.formates-item__text=item.text
			.formates-item__inner.formates-item__inner--hover.clearfix(class='formates-' + slider_name + '__inner' + ' ' + 'formates-' + slider_name + '__inner--hover')
				-each item in items
					if item.hover
						+slider--offers_item--hover(slider_name, item.id, item.hover)

		div.formates-item__scroll(class='formates-' + slider_name + '__scroll')
			div.formates-item__scroll_bar(class='formates-' + slider_name + '__scroll_bar')
				div.offers-item__scroll_control(class='formates-' + slider_name + '__scroll_control')

mixin slider--formates_item--hover(slider_name, id, items)
	div.formates-item__item.formates-item__item--hover(class='formates-' + slider_name + '__item' + ' ' + 'formates-' + slider_name + '__' + id + ' ' + 'formates-' + slider_name + '__item--hover' + ' ' + 'formates-' + slider_name + '__' + id + '--hover')
		div.formates-item__item--hover_wrapper(class='formates-' + slider_name + '__item--hover_wrapper' + ' ' + 'formates-' + slider_name + '__' + id + '--hover_wrapper')
			each item in items
				p.formates-item__text.formates-item__text--hover=item

mixin formates
	+slider--formates_item('formates', [{
		id: 'a0',
		text: '',
		hover: ''
	}])