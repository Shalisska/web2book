mixin footer-pay(items)
	each item, i in items
		a.footer-pay__item(class=('footer-pay__item--' + item.id) href=item.href)
			+picture({
				name: item.id,
				adress: '../images/footer/pay/footer-pay@',
				ext: 'png'
			}, {
				main: {
					width: 768,
					img: 768
				},
				other: [{
					val: 'max',
					width: 650,
					img: 540
				}]
			})
		if (i === 2)
			.footer-pay__item-row

mixin footer-contacts(items)
	-var icon
	each item in items
		if item.id != 'mail'
			-icon = ' sprite_icon-' + item.id
		else
			-icon = ''
		p.footer-contacts__item(class='footer-contacts__item--' + item.id + icon)
			if item.id == 'mail'
				each text in item.text
					a(class = 'sprite_icon-' + item.id href='mailto: ' + text)=text
			else
				=item.text


