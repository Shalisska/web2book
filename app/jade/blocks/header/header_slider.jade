include slider/slide1

mixin slider(slider_name, items)
	each item, i in items
		if i===0
			input(class=slider_name + '__input' type='radio' name=slider_name id=slider_name + '--slide' + (i + 1) checked)
		else
			input(class=slider_name + '__input' type='radio' name=slider_name id=slider_name + '--slide' + (i + 1))
	
	div(class=slider_name + '__box')
		div.clearfix(class=slider_name + '__inner')
			each item in items
				div.clearfix(class=slider_name + '__item' + ' ' + 'header-' + item)
					case item
						when 'slide1'
							+slide1(item)
						default
							img(src='../images/header/header_slide.png', alt='slide1')
	
	div(class=slider_name + '__controls')
		div(class=slider_name + '__controls--arrows')
			a(class=slider_name + '__controls--arrows-prev' + ' sprite ' + 'sprite_icon-' + slider_name + '_controls--prev' href='/')
			a(class=slider_name + '__controls--arrows-next'  + ' sprite ' + 'sprite_icon-' + slider_name + '_controls--next' href='/')
		
		div(class=slider_name + '__controls--buttons')
			each item, i in items
				label(for=slider_name + '--slide' + (i + 1))

.header-slider
	+slider('header-slider', ['slide1', 'slide2', 'slide3', 'slide4', 'slide5'])