mixin objCreate(keys, vals)
	-var arr = []
	each key, i in keys
		each val, j in vals
			if i === j
				-obj='{'+key+': '+val+'}'
				-arr.push(obj)

mixin textRow(items)
	each item, i in items
		=item
		if i < (items.length-1)
			br

mixin actionDescText(items)
	-var arr = []
	each item in items
		-var part=item.name + ': ' + item.value
		-arr.push(part)
	+textRow(arr)

mixin picture(info, items)
	picture
		if (items.other)
			each item in items.other
				-var res = []
				each pict in item.img
					-res.push(info.adress + pict + '.' + info.ext + ' ' + pict + 'w')
				-var med = '(' + item.val + '-width: ' + item.width + 'px)'
				-var resourse = res[0] + ', ' + res[1] + ', ' + res[2] + ', ' + res[3]
				source(media=med srcset=resourse)
		
		-var item = items.main
		-var res = []
		each pict, j in item.img
			if (j === 0)
				-res.push(info.adress + pict + '.' + info.ext)
			else
				-res.push(info.adress + pict + '.' + info.ext + ' ' + pict + 'w')
		-var resourse = res[1] + ', ' + res[2] + ', ' + res[3]
		img(src=res[0] width=item.width, srcset=resourse, alt=info.name)